<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<!-- classPath:数据库的JDBC驱动-->
<generatorConfiguration>
    <!--注意修改为本机仓库路径-->
    #*<classPathEntry location="/home/ooodjc/project/java/maven/repository/mysql/mysql-connector-java/8.0.21/mysql-connector-java-8.0.21.jar"/>*#
    <!--<classPathEntry location="D:\java\repository\mysql\mysql-connector-java\8.0.28\mysql-connector-java-8.0.28.jar"/>-->
    <classPathEntry location="C:\Users\djc\.m2\repository\mysql\mysql-connector-java\8.0.28\mysql-connector-java-8.0.28.jar"/>

    <context id="mysqlgenerator" targetRuntime="MyBatis3">
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <!--数据库连接信息-->
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://127.0.0.1:3306/${databaseName}?useUnicode=true&amp;characterEncoding=UTF-8&amp;serverTimezone=UTC&amp;verifyServerCertificate=false&amp;useSSL=false"
                        userId="root"
                        password="123456">
            <!--这一句解决生成其他库同名表的问题-->
            <property name="nullCatalogMeansCurrent" value="true"/>
        </jdbcConnection>

        <!--Java Entity生成器 -->
        <javaModelGenerator targetPackage="${parentPackage}.entity" targetProject="./src/main/java" />
        <!--map xml生成器 -->
        <sqlMapGenerator targetPackage="mapper" targetProject="./src/main/resources" />
        <!-- dao生成器-->
        <javaClientGenerator targetPackage="${parentPackage}.mapper" targetProject="./src/main/java" type="XMLMAPPER" />


        <!-- 数据表与Bean的映射 -->
#foreach($item in $tables)
        <table tableName="${item.name}"  domainObjectName="${item.entityName}" />
#end
    </context>
</generatorConfiguration>
